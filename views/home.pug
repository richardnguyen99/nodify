extends layout

block content
  //- Begin::Container
  .container
    //- Begin::Hero_Section_Row
    section(id="hero").row.align-items-center.pt-5.pt-md-5.pb-5.pb-md-5
      .col-12.col-md-5.col-lg-6.order-md-2
        img(src="/assets/svg/hero-1.svg", alt="Hero section banner").animation--float
      .col-12.col-md-7.col-lg-6.order-md-1
        h1.display-3.text-center.text-md-start
          | Meet&nbsp;
          span.text.text--brand.fw-bold Nodify
        h3.text-muted.lead.text-center.text-md-start.mb-5.mb-lg-8 Where we make Data Structures and Algorithms more interesting.
        .text-center.text-md-start
          a(href="#").btn.btn--text.btn--brand.btn--float.btn--shadow--onHover.me-3 Get started
          a(href="https://github.com/richardnguyen99/nodify").btn.btn--text.btn--dark.btn--float.btn--border
            img(src="/assets/svg/github-16.svg", alt="Github").me-2
            | Github
    //- End::Hero_section_Row
    section(id="collections-title").row.justify-content-center.pt-5.pt-md-5
      .col-md-10.col-lg-8.text-center
        hr(size="5").hr--sm.hr--warning.mb-5.mb-md-5.mx-auto
        h2.display-3.mb-4.fw-bold
          span.text--underline--warning Visualizations
        p.mb-5 We make cool visualizations to make DSA seem more interesting

    section(id="collections-card").row.g-2.g-lg-3
      .col-12.col-md-6.col-lg-4
        a.card.card__article(href="/algorithm/sorting/bubble-sort")
          img(src="/assets/images/bubble-sort.jpg", alt="Bubble sort").card-img-top
          .card__text
            h5.card-title Bubble sort
            p.badge.bg-primary sort

      .col-12.col-md-6.col-lg-4
        a.card.card__article(href="/algorithm/sorting/insertion-sort")
          img(src="/assets/images/insertion-sort.jpg", alt="Insertion sort").card-img-top
          div.card__text
            h5.card-title Insertion sort
            p.badge.bg-primary sort

      .col-12.col-md-6.col-lg-4
        a.card.card__article(href="/algorithm/sorting/selection-sort")
          img(src="/assets/images/selection-sort.jpg", alt="Insertion sort").card-img-top
          div.card__text
            h5.card-title Selection sort
            p.badge.bg-primary sort
  //- End::Container
